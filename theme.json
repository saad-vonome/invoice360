{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "customTemplates": [
		{
			"name": "page-home",
			"postTypes": ["page"],
			"title": "Wellcome Page"
		},
        {
			"name": "page-no-title",
			"postTypes": ["page"],
			"title": "No Title"
		}
	],
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "description": "The header area of the site.",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "description": "The footer area of the site.",
            "area": "footer"
        }
    ],
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0073AA",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#767676",
                    "name": "Secondary"
                }
            ]
        },
        "typography": {
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "12px",
                    "name": "Small"
                },
                {
                    "slug": "large",
                    "size": "32px",
                    "name": "Large"
                }
            ]
        }
    }
}